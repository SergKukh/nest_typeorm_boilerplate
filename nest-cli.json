{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "/modules/mail/static/",
      "**/*.png",
      "**/*.ttf"
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": { "classValidatorShim": true }
      }
    ]
  }
}
